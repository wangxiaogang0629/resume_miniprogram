.call-me {
  width: 670rpx;
  height: 476rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20rpx 0px rgba(130,141,159,0.15);
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.call-me .phone {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.call-me .icon {
  width: 26rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.call-me .name {
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(146,151,163,1);
  line-height: 40rpx;
  margin-right: 20rpx;
}

.call-me .text {
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(146,151,163,1);
  line-height: 40rpx;
}

.call-me  .wx {
  align-items: flex-start;
}

.evm .img {
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 8rpx;
}

.evm {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wx-title {
  display: flex;
  align-items: center;
}

.call-me-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 670rpx;
  height: 102rpx;
  background:rgba(74,116,255,1);
  border-radius: 16rpx;
  margin: 80rpx 0;
}

.call-me-icon {
  width: 46rpx;
  height: 48rpx;
  margin-right: 34rpx;
}

.call-me-btn-text {
  height: 50rpx;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 50rpx;
  letter-spacing: 2rpx;
}

.call-me-btn-inner {
  display: flex;
}

