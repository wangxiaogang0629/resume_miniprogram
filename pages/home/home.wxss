.work-exp {
  width: 670rpx;
  height: 238rpx;
  padding: 44rpx 40rpx 0 12rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20rpx 0px rgba(130,141,159,0.15);
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.work-exp .info {
  display: flex;
  justify-content: space-between;
  padding-left: 28rpx;
  height: 66rpx;
  align-items: center;
}

.work-exp .info .time {
  font-size: 48rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(44,62,91,1);
  line-height: 66rpx;
}

.work-exp .info .exp-btn {
  width: 56rpx;
  height: 56rpx;
}

.company-info {
  display: flex;
  align-items: center;
  height: 124rpx;
}

.company-info .logo {
  width: 68rpx;
  height: 68rpx;
  padding: 0 28rpx;
}

.company-info .name{
  font-size: 36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(146,151,163,1);
  line-height: 50rpx;
}

