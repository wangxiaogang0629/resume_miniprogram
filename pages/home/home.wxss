/* pages/home/home.wxss */

page {
  box-sizing: border-box;
  padding: 0 40rpx;
  position: relative;
}

.title-name {
  width: 452rpx;
  font-size: 60rpx;
  font-family: PingFangSC-Semibold,PingFang SC;
  font-weight: 600;
  color: rgba(44,62,91,1);
  line-height: 84rpx;
  margin-bottom: 80rpx;
}

.professional {
  width: 260rpx;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(44,62,91,1);
  line-height: 42rpx;
}

.column {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.column .icon {
  width: 38rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.column .text {
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(44,62,91,1);
  line-height: 56rpx;
}

.my-work {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 80rpx;
}

.work-item {
  display: flex;
  justify-content: space-between;
  width: 324rpx;
  height: 200rpx;
  box-sizing: border-box;
  padding: 40rpx;
  background:rgba(255,255,255,1);
  box-shadow: 0px 0px 20rpx 0px rgba(130,141,159,0.2);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.work-item .title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(44,62,91,1);
  line-height: 50rpx;
}

.work-item .icon {
  width: 98rpx;
  height: 88rpx;
}

.my-info {
  width: 670rpx;
  height: 796rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20rpx 0px rgba(130,141,159,0.15);
  border-radius: 16rpx;
  margin-bottom: 80rpx;
}

.photo-box {
  display: flex;
  align-items: center;
  height: 160rpx
}

.photo {
  height: 160rpx;
  width: 160rpx;
  margin-right: 40rpx;
  border-radius: 100%;
}

.name-box {
  height: 100rpx;
}

.name-box .text {
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(44,62,91,1);
  line-height: 56rpx;
  margin-bottom: 8rpx;
}

.name-box .work {
  height: 34rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(44,62,91,1);
  line-height: 34rpx;
}

.info-one {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.info-one .text {
  height: 40rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(146,151,163,1);
  line-height: 40rpx;
}

.my-info-icon-box {
  width: 34rpx;
  height: 34rpx;
  display: flex;
  justify-content: center;
  margin-right: 20rpx;
}

.info-1 .my-info-itme-icon {
  height: 34rpx;
  width: 26rpx;
}

.info-2 .my-info-itme-icon {
  height: 26rpx;
  width: 34rpx;
  margin-right: 20rpx;
}

.info-3 .my-info-itme-icon {
  height: 36rpx;
  width: 34rpx;
  margin-right: 20rpx;
}

.my-talk{
  width: 590rpx;
  height: 316rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(146,151,163,1);
  line-height: 54rpx;
}

