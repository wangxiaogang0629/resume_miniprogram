
page {
  padding: 0 40rpx;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.moduleName {
  width: 100%;
  height: 160rpx;
  background: rgba(255,255,255,1);
  font-size: 60rpx;
  font-weight: blod;
  color:rgba(44,62,91,1);
  line-height: 160rpx;
}

.card {
  width: 100%;
  height: 554rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 8rpx 0px rgba(231,232,233,1);
  border-radius: 16rpx;
  margin-bottom: 60rpx;
}

.card:last-child {
  margin-bottom: 180rpx;
}

.img {
  width: 670rpx;
  height: 420rpx;
}

.info {
  width: 100%;
  height: 134rpx;
  padding: 20rpx 16rpx 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.text {
  display: flex;
  flex-direction: column;
}

.title {
  height: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color:rgba(44,62,91,1);
  line-height: 50rpx;
  text-shadow:0px 4rpx 8rpx rgba(231,232,233,1);
  margin-bottom: 10rpx;
}

.type {
  height: 34rpx;
  font-size: 24rpx;
  color:rgba(146,151,163,1);
  line-height: 34rpx;
  text-shadow:0px 4rpx 8rpx rgba(231,232,233,1);
}

.share {
  height: 46rpx;
  width: 46rpx;
}

/* 分享 */

.shareBox {
  height: 0;
  overflow: hidden;
  transition: all 0.3s;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background:rgba(255,255,255,1);
  box-shadow:0px -4rpx 40rpx 0px rgba(50,51,55,0.1);
  border-radius: 32rpx 32rpx 0px 0px;
}

.shareBoxAct {
  height: 260rpx;
  padding: 40rpx 200rpx;
}

.creatPosters, .shareWx {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shareBtn {
  position: absolute;
  top: 0;
  right: 0;
  height: 100rpx !important;
  width: 100rpx !important;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  opacity: 0;
}

.shareBtn::after {
  width: 0;
  height: 0;
  margin: 0;
  padding: 0;
}

.creatPosters .icon, .shareWx .icon {
  height: 100rpx;
  width: 100rpx;
  margin-bottom: 8rpx;
}

.iconText {
  font-size: 24rpx;
  font-weight: 400;
  color:rgba(50,51,55,0.4);
  line-height: 34rpx;
}

.mask {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.3);
}

.posterBox {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 3;
  width: 100%;
  height: calc(100% - 260rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}

.posterBoxInner {
  width: 660rpx;
  height: 720rpx;
  position: relative;
}

.posterBoxImg {
  width: 660rpx;
  height: 720rpx;
}

.evm {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  right: 45rpx;
  bottom: 45rpx;
  border-radius: 50%;
}

.imgList {
  height: 100%;
  width: 100%;
}

.imgListNoMove {
  overflow: hidden;
}

